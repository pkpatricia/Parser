<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/naglaBackgroundColor"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    tools:context="com.shermansthill.nagla.AddGroceryListItemsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <EditText
            android:id="@+id/addItemEditText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:hint="@string/add_items" />

        <ImageButton
            android:id="@+id/addItemImageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/white"
            android:src="@drawable/ic_add_circle_outline" />
    </LinearLayout>

    <ListView
        android:id="@+id/addGroceryListItemListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:divider="@color/naglaBackgroundColor"
        android:dividerHeight="5sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

</LinearLayout>